//        value           $internalField;
    }
    WALL_UP
    {
        type            symmetry;        
//        type            inletOutlet;
//        inletValue      uniform 0.375;
//        value           $internalField;
    }
    WALL_CYLINDER
    {
        type            kqRWallFunction;
        value           uniform 0;
    }
    frontAndBackPlanes
    {
        type            empty;
    }
}


